generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  passwordHash String
  role      UserRole @default(END_USER)
  status    UserStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  
  // Relations
  createdTemplates Template[]
  contacts        Contact[]
  messages        Message[]
  broadcastLists  BroadcastList[]
}

model Contact {
  id          String   @id @default(cuid())
  userId      String
  name        String
  phoneNumber String
  label       String?
  addedAt     DateTime @default(now())
  
  // Relations
  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveryLogs     DeliveryLog[]
  broadcastContacts BroadcastContact[]
  
  // Unique constraint on (userId, phoneNumber)
  @@unique([userId, phoneNumber])
}

model Message {
  id          String       @id @default(cuid())
  userId      String
  content     String
  status      MessageStatus @default(DRAFT)
  createdAt   DateTime     @default(now())
  scheduledAt DateTime?
  
  // Relations
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaAttachments MediaAttachment[]
  schedule        Schedule?
  deliveryLogs    DeliveryLog[]
}

model MediaAttachment {
  id        String   @id @default(cuid())
  messageId String
  fileUrl   String
  fileType  String
  sizeKb    Int
  
  // Relations
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model Schedule {
  id         String        @id @default(cuid())
  messageId  String        @unique
  sendAt     DateTime
  repeatType RepeatType   @default(NONE)
  timezone   String
  isActive   Boolean       @default(true)
  
  // Relations
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model Template {
  id        String   @id @default(cuid())
  created_by String
  title     String
  content   String
  is_active Boolean  @default(true)
  created_at DateTime @default(now())
  
  // Relations
  creator User @relation(fields: [created_by], references: [id], onDelete: Cascade)
}

model BroadcastList {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  
  // Relations
  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  broadcastContacts BroadcastContact[]
}

model BroadcastContact {
  broadcastListId String
  contactId       String
  
  // Relations
  broadcastList BroadcastList @relation(fields: [broadcastListId], references: [id], onDelete: Cascade)
  contact       Contact       @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  @@id([broadcastListId, contactId])
}

model DeliveryLog {
  id             String           @id @default(cuid())
  messageId      String
  contactId      String
  status         DeliveryStatus    @default(SENT)
  responseDetail String?
  timestamp      DateTime         @default(now())
  
  // Relations
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
}

// Enums
enum UserRole {
  ADMIN
  END_USER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum MessageStatus {
  DRAFT
  SCHEDULED
  SENT
  FAILED
}

enum RepeatType {
  NONE
  DAILY
  WEEKLY
  CUSTOM
}

enum DeliveryStatus {
  SENT
  DELIVERED
  FAILED
}